<!-- Running a set of test cases together is call executing a Test Suite. -->
<!-- In TestNG framework, -->
<!-- we need to create testng.xml file to create and handle multiple test
classes. -->
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Test-Suite" >

	<test name="testNgGroups">


		<groups>
			<run>
				<include name="Instagram" />
				<include name="Facebook" />
			</run>
		</groups>



	<classes>

		<class name="testNG.facebookTestNG" />
		<class name="testNG.instagramTestNG" />

	</classes>

	</test>
	
</suite>