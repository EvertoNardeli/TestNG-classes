<!-- Running a set of test cases together is call executing a Test Suite. -->
<!-- In TestNG framework, -->
<!-- we need to create testng.xml file to create and handle multiple test
    classes. -->
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Test-Suite" parallel = "methods"> 
   
    <test name="testSuite1"> <!-- parallel = classes/methods/tests -->
        <classes>
            <class name="testNG.parallelDemo1" />
       </classes>
    </test>
   
    <test name="testSuite2"> <!-- parallel = classes/methods/tests -->
        <classes>
            <class name="testNG.parallelDemo2" />
       </classes>
    </test>
   
</suite>